   (:standard -principal -w +a-4-9-40-41-42-44-45-48-66-67-70)))
 (main
  (flags
   (:standard -principal -warn-error +A -w +a-4-9-40-41-42-44-45-48-66-67-70)))
 (dev
  (flags
   (:standard -principal -w +a-4-9-40-41-42-44-45-48-66-67-70 -warn-error +A))))

