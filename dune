(rule
 (deps
  Makefile.build_config
  Makefile.config_if_required
  Makefile.common
  (source_tree yacc))
 (targets ocamlyacc)
 (action
  (no-infer
   (progn
    (chdir
     yacc
     (run make -s OCAMLYACC_INCLUDE_PATH=%{ocaml_where}))
    (copy yacc/ocamlyacc ocamlyacc)))))

(install
 (files ocamlyacc)
 (section bin)
 (package ocaml))

