(executable
 (name simdgen)
 (modes native)
 (modules simdgen amd64_simd_defs))

(rule
 (target amd64_simd_instrs.ml)
 (deps simdgen.exe amd64/amd64.csv .ocamlformat-enable)
 (mode promote)
 (action
  (with-stdout-to
   amd64_simd_instrs.ml
   (run ./simdgen.exe amd64))))

(rule
 (enabled_if
  (and
   (= %{env:ARCH=amd64} "amd64")))
 (target simd_proc.ml)
 (action
  (system "touch simd_proc.ml")))
