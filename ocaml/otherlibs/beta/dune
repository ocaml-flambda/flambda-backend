(library
 (name beta)
 (wrapped false)
 (modes byte native)
 (flags
  (-strict-sequence
   -principal
   -absname
   -w
   +a-4-9-40-41-42-44-45-48-66
   -warn-error
   A
   -bin-annot
   -safe-string
   -strict-formats
   -extension-universe
   beta))
 (ocamlopt_flags
  (:include %{project_root}/ocamlopt_flags.sexp))
 (library_flags
  (:standard -linkall)))

(install
 (files
  (glob_files
   (*.{cmxa,a,cmxs,cma,mli} with_prefix beta))
  (glob_files
   (.beta.objs/byte/*.{cmi,cmt,cmti} with_prefix beta))
  (glob_files
   (.beta.objs/native/*.cmx with_prefix beta)))
 (section lib)
 (package ocaml))
