(executable
 (name t)
 (modules t)
 (ocamlopt_flags (:standard -g -linscan -Oclassic -debug-long-frames-threshold 100)))

(rule
 (enabled_if (= %{context_name} "main"))
 (target t.output)
 (deps t.exe)
 (action (with-outputs-to t.output (run ./t.exe))))

(rule
 (alias   runtest)
 (enabled_if (= %{context_name} "main"))
 (action (diff t.expected t.output)))

