(foreign_library
 (archive_name stubs)
 (language c)
 (names stubs)
 (flags -msse4.2)
 (include_dirs "../../ocaml/runtime"))

(executable
 (name basic)
 (modules basic)
 (foreign_archives stubs)
 (ocamlopt_flags (:standard -extension simd)))

(executable
 (name probes)
 (modules probes)
 (enabled_if (<> %{system} macosx))
 (foreign_archives stubs)
 (ocamlopt_flags (:standard -extension simd)))

(rule
 (enabled_if (= %{context_name} "main"))
 (target basic.output)
 (deps basic.exe)
 (action
  (with-outputs-to
   basic.output
   (run ./basic.exe))))

(rule
 (enabled_if (and (= %{context_name} "main") (<> %{system} macosx)))
 (target probes.output)
 (deps probes.exe)
 (action
  (with-outputs-to
   probes.output
   (run ./probes.exe))))

(rule
 (alias runtest)
 (enabled_if (= %{context_name} "main"))
 (action
  (diff empty.expected basic.output)))

(rule
 (alias runtest)
 (enabled_if (and (= %{context_name} "main") (<> %{system} macosx)))
 (action
  (diff empty.expected probes.output)))
