(library
 (name stdlib_alpha)
 (public_name ocaml.stdlib_alpha)
 (modes byte native)
 (flags
  (:standard
   -strict-sequence
   -absname
   -bin-annot
   -safe-string
   -strict-formats
   -extension-universe
   alpha
   ;; Capsule API can't be defined legally.
   -allow-illegal-crossing))
 (ocamlopt_flags
  (:include %{project_root}/ocamlopt_flags.sexp))
 (foreign_stubs
  (language c)
  (names capsule)
  (flags
   ((:include %{project_root}/oc_cflags.sexp)
    (:include %{project_root}/sharedlib_cflags.sexp)
    (:include %{project_root}/oc_cppflags.sexp))))
 (library_flags
  (:standard -linkall)))

(rule
 (deps
  (:first-dep ../to_install.sh)
  (source_tree .))
 (action
  (with-stdout-to
   to_install.sexp
   (run "%{first-dep}" "stdlib_alpha"))))

(install
 (files
  (dllstdlib_alpha_stubs.so as stublibs/dllstdlib_alpha_stubs.so)
  (META as stdlib_alpha/META))
 (section lib)
 (package ocaml))
