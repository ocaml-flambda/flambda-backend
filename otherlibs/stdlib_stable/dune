(library
 (name stdlib_stable)
 (public_name ocaml.stdlib_stable)
 (modes byte native)
 (flags
  (:standard
   -strict-sequence
   -absname
   -bin-annot
   -safe-string
   -strict-formats
   -extension-universe
   stable))
 (ocamlopt_flags
  (:include %{project_root}/ocamlopt_flags.sexp))
 (library_flags
  (:standard -linkall)))

(copy_files#
 (enabled_if
   (or
    (= %{architecture} "amd64")
    (= %{architecture} "arm64")))
  (files "native/*.ml{,i}"))

(rule
 (targets stdlib_stable.ml stdlib_stable.mli)
 (deps generic/stdlib_stable.ml generic/stdlib_stable.mli)
 (enabled_if
  (and
    (<> %{architecture} "amd64")
    (<> %{architecture} "arm64")))
 (action
  (progn
   (copy generic/stdlib_stable.ml stdlib_stable.ml)
   (copy generic/stdlib_stable.mli stdlib_stable.mli))))

(rule
 (deps
  (:first-dep ../to_install.sh)
  (source_tree .))
 (action
  (with-stdout-to
   to_install.sexp
   (run "%{first-dep}" "stdlib_stable"))))

(install
 (files
  (META as stdlib_stable/META))
 (section lib)
 (package ocaml))
