{
        "ocaml.sandbox": {
                "kind": "opam",
                "switch": "4.14.1"
        },
        "files.associations": {
                "*.mlp": "ocaml",
                "smmintrin.h": "c",
                "tmmintrin.h": "c",
                "pmmintrin.h": "c",
                "*.tbl": "c",
                "platform.h": "c"
        },
        "[ocaml]": {
                "editor.defaultFormatter": "ocamllabs.ocaml-platform",
        },
        "[ocaml.interface]": {
                "editor.defaultFormatter": "ocamllabs.ocaml-platform",
        },
        "makefile.configureOnOpen": false,
}
